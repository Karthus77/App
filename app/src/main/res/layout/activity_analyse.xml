<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalyseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/enterBack2"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/back"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="20sp">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="分析报告"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#3299CC">

                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="15sp"
                    android:src="@drawable/hhhh">

                </ImageView>

                <TextView
                    android:id="@+id/suggestion"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_toRightOf="@id/circle2"
                    android:text="建议"
                    android:textSize="20sp"
                    android:layout_marginTop="10sp">
                </TextView>

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background">
                        <ImageView
                            android:id="@+id/book1"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/book"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="20sp">


                        </ImageView>
                        <TextView
                            android:id="@+id/mathSuggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/book1"
                            android:layout_marginBottom="10sp"
                            android:text="建议"
                            android:textSize="15sp"
                            android:layout_marginLeft="20sp">

                        </TextView>
                        <TextView
                            android:id="@+id/anOne"
                            android:layout_width="90sp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/book1"
                            android:text="高等数学"
                            android:textSize="15sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginLeft="10sp"
                            android:textColor="#3299CC">

                        </TextView>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background">
                        <ImageView
                            android:id="@+id/book2"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/book"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="20sp">


                        </ImageView>
                        <TextView
                            android:id="@+id/EnglishSuggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/book2"
                            android:layout_marginBottom="10sp"
                            android:text="建议"
                            android:textSize="15sp"
                            android:layout_marginLeft="20sp">

                        </TextView>
                        <TextView
                            android:id="@+id/anTwo"
                            android:layout_width="90sp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/book2"
                            android:text="大学英语"
                            android:textSize="15sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginLeft="10sp"
                            android:textColor="#3299CC">

                        </TextView>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background">
                        <ImageView
                            android:id="@+id/book3"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/book"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="20sp">


                        </ImageView>
                        <TextView
                            android:id="@+id/csSuggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/book3"
                            android:layout_marginBottom="10sp"
                            android:text="建议"
                            android:textSize="15sp"
                            android:layout_marginLeft="20sp">

                        </TextView>
                        <TextView
                            android:id="@+id/anThree"
                            android:layout_width="90sp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/book3"
                            android:text="计算机导论"
                            android:textSize="15sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginLeft="10sp"
                            android:textColor="#3299CC">

                        </TextView>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background">
                        <ImageView
                            android:id="@+id/book4"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/book"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="20sp">


                        </ImageView>
                        <TextView
                            android:id="@+id/cSuggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/book4"
                            android:layout_marginBottom="10sp"
                            android:text="建议"
                            android:textSize="15sp"
                            android:layout_marginLeft="20sp">

                        </TextView>
                        <TextView
                            android:id="@+id/anFour"
                            android:layout_width="90sp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/book4"
                            android:text="C语言程序设计"
                            android:textSize="15sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginLeft="10sp"
                            android:textColor="#3299CC">

                        </TextView>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>